{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "lib": [
            "es2018"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/@types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
